<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:layout_marginEnd="200dp"/>

        <Button
            android:id="@+id/postButton"
            android:background="@drawable/button_share_background"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:textSize="10dp"
            android:text="Share"
            android:textColor="@color/white"/>
    </LinearLayout>
    <!-- Post Button -->

    <!-- Post Image -->
    <ImageView
        android:id="@+id/postImageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:contentDescription="Captured Image" />

    <!-- Post Description -->
    <EditText
        android:id="@+id/postDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:hint="Caption"
        android:background="@android:color/transparent"
        android:inputType="textMultiLine" />

    <!-- Location with Icon -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_location"
            android:layout_marginEnd="20dp"/>
        <EditText
            android:id="@+id/Location"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:hint="Location"
            android:background="@android:color/transparent"
            android:inputType="textMultiLine" />
    </LinearLayout>

    <!-- Search View with Icon -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_tagged"
            android:layout_marginEnd="20dp"
            />
        <androidx.appcompat.widget.SearchView
            android:id="@+id/SearchTaggedPeople"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:iconifiedByDefault="false"
            android:queryHint="Search"
            android:text="Tag People"

            android:textColor="@color/black"
            android:background="@drawable/search_bar" />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/MyFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
