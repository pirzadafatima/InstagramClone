<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileFragment"
    android:id="@+id/fragment_editProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Back Arrow -->
            <ImageView
                android:id="@+id/iv_back_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back"
                android:layout_gravity="start"
                android:layout_marginBottom="16dp" />

            <!-- Profile Picture Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/default_profile_picture"
                    android:contentDescription="Profile Picture"
                    android:background="@drawable/circular_border" />

                <TextView
                    android:id="@+id/edit_picture_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit picture"
                    android:textColor="#00AEEF"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <!-- Label inside the same box -->
            <TextView
                android:id="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#555555"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Fatima Pirzada"
                android:paddingTop="2dp"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <!-- Label inside the same box -->
            <TextView
                android:id="@+id/username_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="#555555"
                android:textSize="14sp" />

            <!-- Editable field -->
            <EditText
                android:id="@+id/username_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="pirzada_"
                android:paddingTop="2dp"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>
            <!-- Pronouns -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <!-- Label inside the same box -->
            <TextView
                android:id="@+id/pronouns_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pronouns"
                android:textColor="#555555"
                android:textSize="14sp" />

            <!-- Editable field -->
            <EditText
                android:id="@+id/pronouns_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your name"
                android:textColor="#000000"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:paddingTop="2dp" />

        </LinearLayout>


            <!-- Bio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <!-- Label inside the same box -->
                <TextView
                    android:id="@+id/bio_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bio"
                    android:textColor="#555555"
                    android:textSize="14sp" />

                <!-- Editable field -->
                <EditText
                    android:id="@+id/bio_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Bio"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:paddingTop="2dp" />

            </LinearLayout>

            <!-- Gender Dropdown -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <!-- Label inside the same box -->
                <TextView
                    android:id="@+id/gender_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="#555555"
                    android:textSize="14sp" />

            <Spinner
                android:id="@+id/gender_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"

                 />
            </LinearLayout>
            <!-- Personal Info Settings -->
            <TextView
                android:id="@+id/personal_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal information settings"
                android:textColor="#00AEEF"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
